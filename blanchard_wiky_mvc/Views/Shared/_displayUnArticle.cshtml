@model Article

<div class="card mb-3" style="width: 80%;">
    <div class="card-body">
        <h5 class="card-title">@Model.Theme</h5>
        <h6 class="card-subtitle mb-2 text-muted">Rédigé par @Model.Auteur, le @Model.DateCreation</h6>
        @{
                if (Model.DateCreation.ToString() != Model.DateModification.ToString())
                {
                    <h6 class="card-subtitle mb-2 text-muted">Edité le @Model.DateModification</h6>
                }
            }
        <p class="card-text">@Model.Contenu</p>
    </div>
</div>