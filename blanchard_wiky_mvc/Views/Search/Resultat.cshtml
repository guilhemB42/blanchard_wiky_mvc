@model SearchRequest

@{
    List<Article> contientTherme = new();
    string motRecherche;
    if (Model.val == null)
    {
        motRecherche = "";
    }
    else
    {
        motRecherche = Model.val;  
    }
}

@foreach(Article article in Model.Articles)
{
    if (article.Contenu.Contains(motRecherche) || article.Theme.Contains(motRecherche))
    {
        contientTherme.Add(article);    
    }    
}

@foreach (Article article in contientTherme)
{
    <partial name="_displayUnArticle" model="article" />
}