@model Article
@{
    List<Commentaire> commentaires = Model.Comments;
}

<div>
    <div>
        <h3>@Model.Theme</h3> <h4>Rédigé par @Model.Auteur, le @Model.DateCreation</h4>
        @{
            if (Model.DateCreation.ToString() != Model.DateModification.ToString())
            {
            <h4>Edité le @Model.DateModification</h4>    
            }
        }
    </div>
    <div>
        @Model.Contenu
    </div>
    <div>
        <h3>Commentez</h3>
        <a type="button" class="btn btn-primary" asp-controller="Commentaire" asp-action="Create">Ajouter un commentaire</a>
    </div>

    <div>
        <h3>Commentaire</h3>
        @foreach(Commentaire commentaire in commentaires)
        {
            <partial name="_displayUnCommentaire" model="commentaire" />
        }
    </div>
    <a type="button" class="btn btn-warning" asp-action="Edit" asp-route-Id="@Model.Id">Editer cet article</a>
    <a type="button" class="btn btn-danger" asp-action="Delete" asp-route-Id="@Model.Id">Supprimer cet article</a>

</div>